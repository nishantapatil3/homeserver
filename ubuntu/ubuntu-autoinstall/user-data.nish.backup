#cloud-config
autoinstall:
  version: 1
  update: yes
  keyboard:
    layout: us
    toggle: null
    variant: ''
  timezone: "America/Los_Angeles"
  locale: en_US.UTF-8
  identity:
    hostname: node1
    username: ubuntu
    password: "$6$b92TxbCya92ndrX7$8WcGTdSWWRMwMdeipBmTTDMeal7bvbh.kuqMIl1C6vcKmrSIh9VkxhKPJa.uirEZvrvYapHNPZvGPYnCK0tcl1" # n
  ssh:
    allow-pw: true
    install-server: true
  packages:
    - software-properties-common
    - ca-certificates
  user-data: # Cloud-init starts here after reboot
    disable_root: false
    users:
      - name: ubuntu
        gecos: 'Ubuntu User'
        groups: users, admin, docker, sudo
        sudo: ALL=(ALL) NOPASSWD:ALL
        shell: /bin/bash
        lock_passwd: false
        passwd: "$6$b92TxbCya92ndrX7$8WcGTdSWWRMwMdeipBmTTDMeal7bvbh.kuqMIl1C6vcKmrSIh9VkxhKPJa.uirEZvrvYapHNPZvGPYnCK0tcl1" # n
    apt:
      primary:
        - arches: [default]
          uri: http://us.archive.ubuntu.com/ubuntu/
    package_update: true
    package_upgrade: true
    packages:
      - avahi-daemon
      - curl
      - git
      - vim
      - wget
      - htop
      - build-essential
      - python3-pip
      - docker.io
